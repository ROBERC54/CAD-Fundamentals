@model IEnumerable<CADFundamentalsWebAPI.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="FullList">Full List</a>
</p>
<div class="navbar">
</div>
@foreach (var item in Model)
{
    <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".@item.Id" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    @Html.DisplayFor(modelItem => item.Title)
                </button>
            </div>
            <div class="@item.Id collapse d-sm-inline-flex flex-sm-row-reverse">
                <!--

    <ul class="navbar-nav flex-grow-1">
        (atsymbol)await Component.InvokeAsync("TopicNavCollapse", item)
    </ul>
    -->
            </div>
        </div>
    </div>
}
